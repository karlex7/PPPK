        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MarkaVozilaID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MarkaVozilaID, selectList: new SelectList(items: marka, dataTextField: "Naziv", dataValueField: "IDMarkaVozila"), htmlAttributes: new { @class = "form-control" })
                @*@Html.EditorFor(model => model.MarkaVozilaID, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.MarkaVozilaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GodinaProizvodnje, htmlAttributes: new { @class = "control-label col-md-2" })
