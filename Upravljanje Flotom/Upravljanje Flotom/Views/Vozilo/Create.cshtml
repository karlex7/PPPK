@model Upravljanje_Flotom.Models.Vozilo
@using Upravljanje_Flotom.Models;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tip = ViewBag.tip as List<TipVozila>;
    var marka = ViewBag.marka as List<MarkaVozila>;
    var godine = ViewBag.godine as List<int>;
}

<h2>Create</h2>


